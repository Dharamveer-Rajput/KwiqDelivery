<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartitventures.Fragments.OrderHistoryFragment">


    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/layout_bg_red"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtAccepted"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/accepted"
            android:textColor="@color/roundbtnbacgroundclr"
            android:gravity="center"
            android:textSize="@dimen/image_size8"
            android:background="@drawable/layout_bg_white"
            />


        <TextView
            android:id="@+id/txtPending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:text="@string/pending"
            android:gravity="center"
            android:textSize="@dimen/image_size8"
            android:background="@drawable/layout_bg_red"
            />



    </LinearLayout>


    <View
        android:id="@+id/line1"
        android:layout_below="@id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@color/grey"/>



    <FrameLayout
        android:layout_below="@id/line1"
        android:id="@+id/frameLayoutOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>
